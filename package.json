{
  "name": "@prozorro/prozorro-eds",
  "private": false,
  "version": "1.0.0",
  "description": "Wrapper over IIT library (Diia.Sign)",
  "author": "Dmytro Rybachek",
  "license": "MIT",
  "main": "./dist/prozorro-eds.cjs.js",
  "module": "./dist/prozorro-eds.es.js",
  "types": "./dist/prozorro-eds.d.ts",
  "type": "module",
  "exports": {
    "./dist/": {
      "import": "./dist"
    },
    ".": {
      "types": "./dist/prozorro-eds.d.ts",
      "import": "./dist/prozorro-eds.es.js",
      "require": "./dist/prozorro-eds.cjs.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite --config vite.config.lib.ts",
    "build:lib": "tsc && vite build --config vite.config.lib.ts && npm run types && copyfiles ./package.json dist && npm run removeFromBuild:lib",
    "build:app": "vite build --config vite.config.app.ts",
    "build": "npm run clean && npm run build:lib && npm run build:app",
    "test": "vitest",
    "preview": "vite preview",
    "test:coverage": "vitest --coverage",
    "lint:scripts": "eslint ./src --ext .ts",
    "format:scripts": "prettier . --write",
    "format": "npm run format:scripts && npm run format:styles",
    "types": "tsc --project tsconfig.types.json",
    "version:patch": "npm version patch",
    "version:major": "npm version major",
    "removeFromBuild:lib": "rimraf ./dist/robots.txt ./dist/test-data",
    "clean": "rimraf dist"
  },
  "keywords": [
    "typescript",
    "library",
    "prozorro",
    "eds",
    "encoding"
  ],
  "devDependencies": {
    "@sentry/types": "^9.40.0",
    "@types/lodash": "^4.17.17",
    "@types/node": "^22.15.29",
    "@types/uuid": "^10.0.0",
    "@vitest/coverage-v8": "^3.2.1",
    "copyfiles": "^2.4.1",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.1",
    "jiti": "^2.4.2",
    "lint-staged": "^16.1.0",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "~5.7.3",
    "typescript-eslint": "^8.33.1",
    "vite": "^6.3.5",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.1"
  },
  "dependencies": {
    "@sentry/browser": "^9.40.0",
    "@sentry/tracing": "^7.120.3",
    "axios": "^1.9.0",
    "jsondiffpatch": "^0.7.3",
    "lodash": "^4.17.21",
    "uuid": "^11.1.0"
  }
}
